	,CONCAT('Overwhelm'),CONCAT('')),
	unumkeywordsgained = IF(
	(`cardtext` LIKE '%have%Overwhelm%')
	,(`unumkeywordsgained` + 1),`unumkeywordsgained`);
UPDATE `eternal_cards` SET ukeywordsgained = IF(
