	(`cardtext` LIKE '%power cards have Warp%')
	,CONCAT('Warp'),CONCAT('')),
	pownumkeywordsgained = IF(
	(`cardtext` LIKE '%power cards have Warp%')
	,(`pownumkeywordsgained` + 1),`pownumkeywordsgained`);
UPDATE `eternal_cards` SET powgainkeyword = IF(
	(`pownumkeywordsgained`>0),1,0);
